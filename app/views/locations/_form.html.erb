<%= form_with(model: location, local: true) do |form| %>
  <% if location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
      <% location.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address, placeholder: "Where are you (approximately)?" %>
  </div>

  <div class="field">
    <%= form.label :city %>
    <%= form.text_field :city, placeholder: 'Enter Center' %>
  </div>

  <div class="field">
    <%= form.hidden_field :latitude, id: :location_latitude %>
  </div>

  <div class="field">
    
    <%= form.hidden_field :longitude, id: :location_longitude %>
  </div>

  <div class="actions">
    <%= form.submit 'Find A Bus!' %>
  </div>
<% end %>
